<%- include('partials/header', {title: 'Create User' }) %>

    <div class="page-header">
        <h1><i class="fas fa-user-plus"></i> Create New User</h1>
        <a href="/users" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Users
        </a>
    </div>

    <div class="form-container">
        <form action="/users" method="POST" class="user-form">
            <% if (locals.error) { %>
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle"></i>
                    <%= locals.error %>
                </div>
                <% } %>

                    <div class="form-group">
                        <label for="name">
                            <i class="fas fa-user"></i> Name *
                        </label>
                        <input type="text" id="name" name="name"
                            value="<%= locals.formData && locals.formData.name || '' %>" required class="form-control">
                        <small class="form-text">Full name of the user</small>
                    </div>

                    <div class="form-group">
                        <label for="email">
                            <i class="fas fa-envelope"></i> Email *
                        </label>
                        <input type="email" id="email" name="email"
                            value="<%= locals.formData && locals.formData.email || '' %>" required class="form-control">
                        <small class="form-text">Valid email address</small>
                    </div>

                    <div class="form-group">
                        <label for="age">
                            <i class="fas fa-birthday-cake"></i> Age
                        </label>
                        <input type="number" id="age" name="age" min="1" max="120"
                            value="<%= locals.formData && locals.formData.age || '' %>" class="form-control">
                        <small class="form-text">Optional, between 1-120</small>
                    </div>

                    <div class="form-group">
                        <label for="password">
                            <i class="fas fa-lock"></i> Password (Optional)
                        </label>
                        <input type="password" id="password" name="password" class="form-control">
                        <small class="form-text">Leave empty for no password</small>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save"></i> Create User
                        </button>
                        <button type="reset" class="btn btn-secondary">
                            <i class="fas fa-redo"></i> Reset
                        </button>
                    </div>
        </form>
    </div>

    <div class="api-info">
        <h3><i class="fas fa-code"></i> API Equivalent</h3>
        <pre><code>POST /api/users
Content-Type: application/json

{
    "name": "John Doe",
    "email": "john@example.com",
    "age": 25,
    "password": "optional"
}</code></pre>
    </div>

    <%- include('partials/footer') %>