<%- include('partials/header', {title: 'User Details' }) %>

    <div class="page-header">
        <h1><i class="fas fa-user-circle"></i> User Details</h1>
        <a href="/users" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Users
        </a>
    </div>

    <div class="user-detail-card">
        <div class="user-header">
            <div class="user-avatar">
                <i class="fas fa-user fa-3x"></i>
            </div>
            <div class="user-info">
                <h2>
                    <%= user.name %>
                </h2>
                <p class="user-email"><i class="fas fa-envelope"></i>
                    <%= user.email %>
                </p>
                <p class="user-id"><i class="fas fa-id-card"></i> ID: <%= user.id %>
                </p>
            </div>
        </div>

        <div class="user-details">
            <div class="detail-row">
                <span class="detail-label"><i class="fas fa-birthday-cake"></i> Age:</span>
                <span class="detail-value">
                    <%= user.age || 'Not specified' %>
                </span>
            </div>
            <div class="detail-row">
                <span class="detail-label"><i class="fas fa-calendar-plus"></i> Created:</span>
                <span class="detail-value">
                    <%= new Date(user.createdAt).toLocaleString() %>
                </span>
            </div>
            <% if (user.updatedAt) { %>
                <div class="detail-row">
                    <span class="detail-label"><i class="fas fa-calendar-check"></i> Last Updated:</span>
                    <span class="detail-value">
                        <%= new Date(user.updatedAt).toLocaleString() %>
                    </span>
                </div>
                <% } %>
        </div>

        <div class="user-actions">
            <a href="/users/<%= user.id %>/edit" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit User
            </a>
            <a href="/api/users/<%= user.id %>" class="btn btn-info" target="_blank">
                <i class="fas fa-code"></i> View API Response
            </a>
            <form action="/users/<%= user.id %>/delete" method="POST" class="inline-form">
                <button type="submit" class="btn btn-danger"
                    onclick="return confirm('Are you sure you want to delete this user?')">
                    <i class="fas fa-trash"></i> Delete User
                </button>
            </form>
        </div>
    </div>

    <div class="json-viewer">
        <h3><i class="fas fa-code"></i> JSON Data</h3>
        <pre><code><%= JSON.stringify(user, null, 2) %></code></pre>
    </div>

    <%- include('partials/footer') %>